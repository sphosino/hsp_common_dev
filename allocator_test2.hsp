#include "memory_allocator.hsp"
#include "nodmod/scrollbarmodule.hsp"

#addition "WrapCall.as"
screen 0,ginfo(20) - 50, ginfo(21) - 50,,0,0
randomize
mes "速度調整のスクロールバーです"
scbaOnScroll *sc　//動かすたびにジャンプするラベル

scbaScrollbar 0, 600,30
makeID = stat
scbaSetrange makeID, 1, 20 //1-20までの値
scbaSetPos makeID, 15
m1 = 15
scbaScrollbar 0,600,30
writeID = stat
scbaSetrange writeID, 1, 20
scbaSetPos writeID,15
m2 = 15
scbaScrollbar 0, 600, 30
delID = stat
scbaSetrange delID, 1, 20
scbaSetPos delID, 15
m3 = 15

randomize 

newmod memory_pool, memory_allocator, 400;プールサイズ自動拡張の確認のため小さく確保

repeat 
	title"作成準備中"
	draw_memory_pool_with_labels memory_pool, 100,150 * 1, idx

	await 2000/m1
	
	title"作成開始"
	dim idlist
	repeat 10
		
		size2 = 20 + rnd(30)
		t = get_new_block(memory_pool, size2)
		idlist(cnt) = t
		debug_check_link_integrity memory_pool, "作成後のリンク整合性チェック"

		draw_memory_pool_with_labels memory_pool, 100,150 * 1,idlist

		await 1000/m1
	loop
;/*
	// 一部を書き込みしてみる（右のスペースを使い無理なら左のスペースもみる。それでも無理なら、自動的に移動と解放が行われる。）
	title "書き込み準備中"
	draw_memory_pool_with_labels memory_pool, 100,150*2,idlist
	await 2000/m2
	
	title "書き込み開始"
	dim idx
	repeat 20
		
		idx(cnt) = idlist(rnd(length(idlist)))
		// 拡張を引き起こすように長い文字列を書く

		s = ""
		repeat 3 + rnd(3)
		s += "abcde"
		loop
		
		append_str memory_pool,idx(cnt), s
		debug_check_free_list_integrity memory_pool
		debug_check_link_integrity memory_pool, "拡張後のリンク整合性チェック"
		
		draw_memory_pool_with_labels  memory_pool,100,150 * 2, idx
		await 1000/m2
	loop
//*/

	title "削除準備中"
	draw_memory_pool_with_labels  memory_pool,100,150 * 3, idx
	await 2000/m3
	
	title "削除開始"
	dim idx
	count = 0
	in = 0
	dim a, get_block_count(memory_pool)
	repeat 7 + rnd(6)
		if get_usable_blocks(memory_pool,a) == 0: break
		free_block memory_pool, a(rnd(stat))
		debug_check_link_integrity memory_pool,"解放後のリンク整合性チェック"

		draw_memory_pool_with_labels memory_pool, 100,150 * 3, idx
		await 1000/m3
	loop
loop

*sc
	switch wparam
	case makeID
	m1 = lparam
	swbreak
	case writeID
	m2 = lparam
	swbreak
	case delID
	m3 = lparam
	swbreak
	swend
	return